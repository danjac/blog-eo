{% macro img(url, description, width, height, class='', figure=false) -%}
{% if figure -%}
<figure>
{%- endif %}
  <img src="{{ url }}"
       alt="{{ description }}"
       title="{{ description }}"
       loading="lazy"
       width="{{ width }}"
       height="{{ height }}"
       {% if class %}class="{{ class }}"{% endif %}>
{% if figure -%}
  <figcaption>
  <em>{{ description }}</em>
  </figcaption>
</figure>
{%- endif %}
{%- endmacro %}
