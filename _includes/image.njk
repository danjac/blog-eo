{% macro figure(url, description, width, height, source='', attribution='', class='') %}
<figure class="image{% if class %} {{ class }}{% endif %}">
  <img src="{{ url }}"
       alt="{{ description }}"
       loading="lazy"
       width="{{ width }}"
       height="{{ height }}">
  <figcaption>
      {{ description }}
      {% if source != '' and attibution != '' -%}
      Fonto: <a href="{{ source }}">{{ attribution }}</a>
      {%- endif %}
  </figcaption>
</figure>
{%- endmacro %}
